<% include header %>
<div class="container">
<h1>Liste des Joueurs</h1>
    <div class="row">
        <div class="col">
            <table id="playerTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Team</th>
                    <th>Gain</th>
                    <th>Prix</th>
                    <th>%</th>
                    <th>lol</th>
                    <th> W</th>
                    <th> L</th>
                    <th> D</th>
                    <th>idRole</th>
                </tr>
                </thead>
                <tbody>
                <% for (var player in players) { %>
                <% var stat = players[player].Match() %>
                <tr>
                    <td><a href="/player/<%= players[player].pseudo %>"><%= players[player].pseudo %></a></td>
                    <td> <img src="/img/<%= players[player].idTeam %>.svg" class="logo-team mini"/>  <%= players[player].team %> </td>
                    <td><%= stat.wl.gain %> <i class="ra ra-diamond ra-lg"></i></td>
                    <td><%= stat.wl.prix %> <i class="ra ra-diamond ra-lg"></i></td>
                    <td><%= Math.round(((stat.wl.gain - stat.wl.prix) * 100 )/ stat.wl.gain)  %>%</td>
                    <td><%= Math.round(stat.wl.gain - stat.wl.prix)  %><i class="ra ra-diamond ra-lg"></i></td>
                    <td><%= stat.wl.victory %> </td>
                    <td> <%= stat.wl.defeat %> </td
                    >
                    <td> <%= stat.wl.draw %>  </td>
                    <td class="text-center"><%- players[player].idRole.icon %> <span
                                style="display: none;"> <%- players[player].idRole.id %> </span></td>
                </tr>
                <% } %>
                </tbody>
            </table>

        </div>
    </div>
</div>

<% include footer %>
