<% include header %>
<div class="container">
    <h1>Inscription</h1>
    


    <form class="form-horizontal" role="form" method="POST" action="/register">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="loginRegister">Pseudo</label>
                    <input type="text" class="form-control" name="loginRegister" id="loginRegister" autocomplete="false" value="<% if (form) { %><%= form.login %><% } %>">
                </div>

                <div class="form-group">
                    <label for="mdpRegister">MDP</label>
                    <input type="password" class="form-control" name="mdpRegister" id="mdpRegister" autocomplete="false" value="<% if (form) { %><%= form.mdp %><% } %>">
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="emailRegister">Email</label>
                    <input type="text" class="form-control" name="emailRegister" id="emailRegister" autocomplete="false" value="<% if (form) { %><%= form.email %><% } %>">
                </div>
                <div class="form-group">
                    <label for="mdp2">MDP</label>
                    <input type="password" class="form-control" name="mdp2Register" id="mdp2Register" autocomplete="false" value="<% if (form) { %><%= form.mdp2 %><% } %>">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button class="btn-submit" type="submit">S'inscrire</button>
            </div>
        </div>
    </form>
    <% if(messages){ %>
    <%= messages.error %>
    <% } %>
</div>
<% include footer %>
