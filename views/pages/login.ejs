<% include header %>
<div class="container">
    <h1>Connexion</h1>
    <form class="form-horizontal" role="form" method="POST" action="/login">
        <div class="form-group">
            <label for="login">Email</label>
            <input type="text" class="form-control" name="login" id="login" value="<% if (form) { %><%= form.pseudo %><% } %>">
        </div>
        <div class="form-group">
            <label for="mdp">MDP</label>
            <input type="password" class="form-control" name="mdp" id="mdp" value="<% if (form) { %><%= form.mdp %><% } %>">
        </div>
        <button type="submit">SEND</button>
    </form>
    <% if(messages){ %>
    <%= messages.error %>
    <% } %>
</div>

<% include footer %>
